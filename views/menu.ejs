<div class="menu-user bg-light shadow">
    <div class="row p-0 m-0 m-s-0 justify-content-center">
      <div class="col col-sm-12 p-0 mt-6 text-center">
        <img class="img-rounded img-rounded-sm shadow-sm" width="120" src="../images/users/<%= locals.loggedUser.image %>">
      </div>
    </div>
    <div class="row mt-3 mt-s-1 justify-content-center">
      <div class="col-10 col-sm-12 text-center">
        <%= locals.loggedUser.name %>
        <p class="ts-1 text-muted"> (<%= locals.loggedUser.permission %>)
      </div>
    </div>


      <!--BOTÕES MENU-->

    <div class="row mt-2 mt-s-1 justify-content-center">
      <div class="col-10">
        <a href="/application" class="btn btn-purpple text-light btn-sm btn-block">Painel</a>
      </div>
    </div>
    
    <% if (locals.loggedUser.function === 1) { %>

      <div class="row mt-2 mt-s-1 justify-content-center">
        <div class="col-10">
          <a href="/create/actuator" class="btn btn-gray bg-glight btn-sm btn-block">Cadastrar Luz</a>
        </div>
      </div>
      <div class="row mt-2 mt-s-1 justify-content-center">
        <div class="col-10">
          <a href="/create/sensor" class="btn btn-gray bg-glight btn-sm btn-block">Cadastrar Sensor</a>
        </div>
      </div>

    <% } %>

    <div class="row mt-2 mt-s-1 justify-content-center">
      <div class="col-10">
        <a href="/history" class="btn btn-gray bg-glight btn-sm btn-block">Histórico</a>
      </div>
    </div>
    
    <div class="row mt-5 justify-content-center">
      <div class="col-10">
        <a href="/auth/logout" class="btn btn-gray text-light bg-secondary btn-sm btn-block">Sair</a>
      </div>
    </div>
    
  </div>