        <% if(actuator.status === 1) { %>
          <form action="update/update" method="POST">
            <input type="hidden" id="actuatorId" name="actuatorId" value="<%= actuator.id %>">
            <button type="submit" class="btn btn-block text-light btn-purpple">Desligar</button>
          </form>
          
        <% } else { %>
          <form action="update/update" method="POST">
            <input type="hidden" id="actuatorId" name="actuatorId" value="<%= actuator.id %>">
            <button type="submit" class="btn btn-gray bg-glight btn-block">Ligar</button>
          </form>

        <% } %>
      </div>
    </div>
    </div>
  <% }); %>
</div>